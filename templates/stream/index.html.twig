{% extends 'base.html.twig' %}

{% block title %}Stream index{% endblock %}

{% block body %}
    <h1>Stream index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Jeu</th>
                <th>Date</th>
                <th>URL</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stream in streams %}
            <tr>
                <td>{{ stream.id }}</td>
                <td>{{ stream.Jeu.name }}</td>

                <td>{{ stream.startdDate ? stream.startdDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ stream.url}}</td>
                <td>
                    <a href="{{ path('app_stream_show', {'id': stream.id}) }}">show</a>
                    <a href="{{ path('app_stream_edit', {'id': stream.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stream_new') }}">Create new</a>
{% endblock %}
